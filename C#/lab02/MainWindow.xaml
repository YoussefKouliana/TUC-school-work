<Window x:Class="TodoAppWPF2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppWPF2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="76*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="TaskTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="400" Height="30" Grid.ColumnSpan="2"/>
        <Button Name="AddButton" Content="Add a task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Height="30" Margin="123,10,0,0" Click="AddButton_Click" Grid.Column="1"/>
        <ListBox Name="TasksListBox" HorizontalAlignment="Left" Height="200" Margin="10,50,0,0" VerticalAlignment="Top" Width="505" Grid.ColumnSpan="2"/>
        <Button Name="RemoveButton" Content="Remove a task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Height="30" Margin="123,260,0,0" Click="RemoveButton_Click" Grid.Column="1"/>
    </Grid>
</Window>
